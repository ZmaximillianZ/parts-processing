{% extends '@!EasyAdmin/page/content.html.twig' %}

{% block main %}
    <h3>Количество партий на оборудование по заданным интервалам времени</h3>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
